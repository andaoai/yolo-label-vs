// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "typescript",
			"tsconfig": "tsconfig.json",
			"problemMatcher": [
				"$tsc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"label": "tsc: build - tsconfig.json"
		},
		{
			"label": "copy-templates",
			"type": "shell",
			"command": "powershell",
			"args": [
				"-Command",
				"Copy-Item -Path src/templates/* -Destination out/templates/ -Recurse -Force"
			],
			"problemMatcher": [],
			"group": "build"
		}
	]
}
